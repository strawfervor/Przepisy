@model Przepisy.Data.Data.CMS.Aktualnosc

@{
    ViewData["Title"] = "Edit";
    var nazwaWidoku = "Edycja wpisu";
}

<div class="w-full">

    <div class="hero bg-base-200 pb-3 pt-3 w-full">
        <div class="hero-content text-center">
            <div class="w-full">
                <h1 class="text-5xl font-bold mb-3">@nazwaWidoku</h1>
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </div>
    </div>

    <div class="flex flex-wrap">
        <div class="w-full">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-error text-sm mt-1"></div>
            <input type="hidden" asp-for="IdAktualnosci" />
            <div class="form-control mb-4">
                <label asp-for="LinkTytul" class="control-label"></label>
                <input asp-for="LinkTytul" class="input input-bordered w-full" />
                <span asp-validation-for="LinkTytul" class="text-error text-sm mt-1"></span>
            </div>
            <div class="form-control mb-4">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="input input-bordered w-full" />
                <span asp-validation-for="Tytul" class="text-error text-sm mt-1"></span>
            </div>
            <div class="form-control mb-4">
                <label asp-for="Tresc" class="control-label"></label>
                <textarea asp-for="Tresc" class="input textarea w-full"></textarea>
                <span asp-validation-for="Tresc" class="text-error text-sm mt-1"></span>
            </div>
            <div class="form-control mb-4">
                <label asp-for="Pozycja" class="control-label"></label>
                <input asp-for="Pozycja" class="input input-bordered w-full" />
                <span asp-validation-for="Pozycja" class="text-error text-sm mt-1"></span>
            </div>
                <div class="form-control mb-4">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
