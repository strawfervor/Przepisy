@model IEnumerable<Przepisy.Data.Data.Przepisy.Przepis>

@{
    ViewData["Title"] = "Przepisy do akceptacji";
    var nazwaWidoku = "Przepisy do akceptacji";
}

<div class="w-full">

    <div class="hero bg-base-200 pb-3 pt-3 w-full">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold mb-3">@nazwaWidoku</h1>
                <a asp-action="Create" class="btn btn-primary mt-2 mb-3">Utwórz nowy</a>
            </div>
        </div>
    </div>


    <div class="overflow-x-auto pb-3 pt-6 w-full">
        <table class="table table-zebra">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tytul)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Autor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Kuchnia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GrupaPrzepisu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KrotkiOpis)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Tytul</td>
                        <td>@item.Autor?.NazwaUzytkownika</td>
                        <td>@item.Kuchnia?.Nazwa</td>
                        <td>@item.GrupaPrzepisu?.Nazwa</td>
                        <td>@item.KrotkiOpis</td>
                        <td>
                            <form asp-action="Akceptuj" method="post">
                                <input type="hidden" name="id" value="@item.IdPrzepisu" />
                                <button type="submit" class="btn btn-success btn-sm">Akceptuj</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>