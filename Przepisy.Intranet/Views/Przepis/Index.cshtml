@model IEnumerable<Przepisy.Data.Data.Przepisy.Przepis>

@{
    ViewData["Title"] = "Index";
    var nazwaWidoku = "Zarządzaj przepisami";
}

<div class="w-full">

    <div class="hero bg-base-200 pb-3 pt-3 w-full">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold mb-3">@nazwaWidoku</h1>
                <a asp-action="Create" class="btn btn-primary mt-2 mb-3">Utwórz nowy</a>
            </div>
        </div>
    </div>


    <div class="overflow-x-auto pb-3 pt-6 w-full">
        <table class="table table-zebra">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KrotkiOpis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpisWykonania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trudnosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlZdjecia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyAktywny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SredniaOcena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kuchnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrupaPrzepisu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KrotkiOpis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpisWykonania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trudnosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlZdjecia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyAktywny)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SredniaOcena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Haslo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kuchnia.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrupaPrzepisu.Nazwa)
            </td>
            <td>
                            <a class="btn btn-sm btn-secondary mb-2" asp-action="Edit" asp-route-id="@item.IdPrzepisu">Edytuj</a> <br />
                            <a class="btn btn-sm btn-warning" asp-action="Delete" asp-route-id="@item.IdPrzepisu">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>