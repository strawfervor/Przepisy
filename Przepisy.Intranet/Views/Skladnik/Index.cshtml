@model IEnumerable<Przepisy.Data.Data.Przepisy.Skladnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KalorycznoscNa100g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrzelicznikNaSztuke)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyAktywny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlZdjecia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KalorycznoscNa100g)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrzelicznikNaSztuke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyAktywny)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlZdjecia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSkladnika">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdSkladnika">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSkladnika">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
