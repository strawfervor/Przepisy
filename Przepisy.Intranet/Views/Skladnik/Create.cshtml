@model Przepisy.Data.Data.Przepisy.Skladnik

@{
    ViewData["Title"] = "Create";
    var nazwaWidoku = "Nowy wpis";
}

<div class="w-full">

    <div class="hero bg-base-200 pb-3 pt-3 w-full">
        <div class="hero-content text-center">
            <div class="w-full">
                <h1 class="text-5xl font-bold mb-3">@nazwaWidoku</h1>
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </div>
    </div>

    <div class="flex flex-wrap">
        <div class="w-full">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-control mb-4">
                    <label asp-for="Nazwa" class="control-label"></label>
                    <input asp-for="Nazwa" class="input input-bordered w-full" />
                    <span asp-validation-for="Nazwa" class="text-error text-sm mt-1"></span>
                </div>
                <div class="form-control mb-4">
                    <label asp-for="KalorycznoscNa100g" class="control-label"></label>
                    <input asp-for="KalorycznoscNa100g" class="input input-bordered w-full" />
                    <span asp-validation-for="KalorycznoscNa100g" class="text-error text-sm mt-1"></span>
                </div>
                <div class="form-control mb-4">
                    <label asp-for="PrzelicznikNaSztuke" class="control-label"></label>
                    <input asp-for="PrzelicznikNaSztuke" class="input input-bordered w-full" />
                    <span asp-validation-for="PrzelicznikNaSztuke" class="text-error text-sm mt-1"></span>
                </div>
                <div class="form-control mb-4 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="CzyAktywny" /> @Html.DisplayNameFor(model => model.CzyAktywny)
                    </label>
                </div>
                <div class="form-control mb-4">
                    <label asp-for="UrlZdjecia" class="control-label"></label>
                    <input asp-for="UrlZdjecia" class="input input-bordered w-full" />
                    <span asp-validation-for="UrlZdjecia" class="text-error text-sm mt-1"></span>
                </div>
                <div class="form-control mb-4">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
