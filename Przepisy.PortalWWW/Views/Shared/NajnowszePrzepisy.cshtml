@model IEnumerable<Przepisy.Data.Data.Przepisy.Przepis>


<div class="flex justify-between mt-4 mb-4">
    @foreach (var item in Model)
    {
        <div class="card bg-base-100 w-96 shadow-sm">
            <figure>
                <img class="h-48 w-full object-cover" src="@item.UrlZdjecia" />
            </figure>
            <div class="card-body">
                <h2 class="card-title">@item.Tytul</h2>
                <p class="h-24 overflow-hidden">@item.KrotkiOpis </p>
                <div class="card-actions justify-end">
                    <a asp-controller="Przepisy" asp-action="Details" asp-route-id="@item.IdPrzepisu" class="btn btn-primary">Pokaż</a>
                </div>
            </div>
        </div>
    }
</div>